@model List<ApplicationJob>
<partial name="_Notification" />
<div>
	<h1>List of Job Applied</h1>
</div>

<table class="table table-bordered">
	<thead>
		<tr class="fw-bold">
			<td>Job Title</td>
			<td>Job Description</td>
			<td>Day Apply</td>
			<td>Status</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var Object in Model)
		{
			<tr>
				<td>@Object.Job.Title</td>
				<td>@Object.Job.Description</td>
				<td>@Object.DayApply</td>
				<td>
					@if (Object.Status == true)
					{
						<p class="text-success fw-bold">Accepted</p>
					}
					else
					{
						<p class="text-warning fw-normal">Pending</p>
					}
				</td>
			</tr>
		}
	</tbody>
</table>