@model List<Job>
<partial name="_Notification" />
<h1>List of Job</h1>


<table class="table table-bordered">
	<thead>
		<tr class="fw-bold">
			<td style="width: 15%">Title</td>
			<td style="width: 25%">Description</td>
			<td style="width: 20%">Required Qualification</td>
			<td>Deadline</td>
			<td>Category</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		@foreach (var Job in Model)
		{
			<tr>
				<td>@Job.Title</td>
				<td>@Job.Description</td>
				<td>@Job.requiredQualification</td>
				<td>@Job.Deadline</td>
				<td>@Job.Category.Name</td>
				<td>
					<a asp-controller="ViewJob" asp-action="Apply" asp-route-id="@Job.ID" class="btn btn-outline-primary">Apply</a>
				</td>
			</tr>
		}
	</tbody>
</table>