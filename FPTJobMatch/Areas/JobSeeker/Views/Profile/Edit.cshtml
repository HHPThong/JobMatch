@model FPTJobMatch.Models.ApplicationUser
@{
	ViewData["Title"] = "User Profile";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Profile</h2>
    <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
<div class="w-75 row mt-4">
    <div class="col-md-4 mt-3">
       
    </div>
    <div class="col-md-8">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
            <!-- Hiển thị thông tin người dùng -->
            <div class="border p-3">
                <div class="mb-3 row">
                    <label asp-for="@Model.Name" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Name" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="@Model.Introduction" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Introduction" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="@Model.Address" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Address" class="form-control" />
                    </div>
                </div>                
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">CV</label>
                    <div class="col-sm-8">
                        <input type="file" name="cvFile" class="form-control" />
                    </div>
                </div>
            </div>
            <button type="submit" class="mt-3 w-25 btn btn-outline-success"><i class="bi bi-pen"></i></button>
        </form>
    </div>
</div>