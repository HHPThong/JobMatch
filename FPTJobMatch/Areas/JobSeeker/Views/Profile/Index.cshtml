﻿﻿@using Microsoft.AspNetCore.Identity
@model FPTJobMatch.Models.ApplicationUser
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "User Profile";
}
            <div class="edit-profile">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-edit-profile mt-3 w-25"><i class="bi bi-pencil-square"></i></a>
                Edit CV
            </div>
        </div>
        <div class="vertical-line mx-5"></div>
        <div class="row">
            <dt class="col-sm-4">Name: </dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Introduction: </dt>
            <dd class="col-sm-8">@Model.Introduction</dd>

            <dt class="col-sm-4">Address: </dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4">City: </dt>
            <dd class="col-sm-8">@Model.City</dd>

            <dd class="col-sm-6 text-center">
                @if (!string.IsNullOrEmpty(Model.CV))
                {
                    <a class="btn btn-outline-danger" href="@Model.CV" target="_blank">View CV</a>
                }
                else
                {
                    <span>No CV uploaded</span>
                }
            </dd>
        </div>
</div>