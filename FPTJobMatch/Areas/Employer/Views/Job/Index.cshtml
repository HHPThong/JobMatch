@model List<Job>
<partial name="_Notification" />
<p> List Of Jobs</p>
<a asp-controller="Job" asp-action="Create" class="btn btn-primary"> Add new Job</a>
<table class="table table-bordered">
	<thead>
		<tr>
			<td>
				Name Job
			</td>
			<td>
				Time Working
			</td>
			<td>
				Company
			</td>
			<td>
				Salary
			</td>
			<td>
				Description
			</td>
			<td>
				Request
			</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var jobs in Model)
		{
			<tr>
				<td>@jobs.Name</td>
				<td>@jobs.TimeWork.Type</td>
				<td>@jobs.Company</td>
				<td>@jobs.Salary</td>
				<td>@jobs.Description</td>
				<td>@jobs.Request</td>
				<td>
					<a asp-controller="Job" asp-action="Edit" asp-route-JobID="@jobs.ID" class="btn btn-primary">Edit</a>
					<a asp-controller="Job" asp-action="Delete" asp-route-JobID="@jobs.ID" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		
		}
	</tbody>
</table>
